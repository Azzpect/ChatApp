{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@middlewares/*": ["src/middlewares/*.js"],
      "@models/*": ["src/models/*.js"],
      "@routes/*": ["src/routes/*.js"]
    },
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext"
  }
}
